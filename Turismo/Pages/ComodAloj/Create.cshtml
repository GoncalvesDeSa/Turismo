@page
@model Turismo.Pages.ComodAloj.CreateModel
@{
}


<br>
<h2>Inserir Comodidade em Alojamento</h2>

 @if (Model.erro.Length > 0)
 {
	 <div class="alert alert-warning alert-dismissible fade show" role="alert">
		 <strong>@Model.erro</strong>
		 <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
	 </div>
 }


<form method="POST">
	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Id da Comodidade</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="ComodId" value="@Model.ComodAlojInfo.Comodid">
		</div>
	</div>
	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Id do Alojamento</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="AlojId" value="@Model.ComodAlojInfo.Alojid">
		</div>
	</div>


	@if (Model.sucesso.Length > 0)
	{
		<div class="row mb-3">
			<div class="col-sm-9">
				<div class="alert alert-success alert-dismissible fade show" role="alert">
					<strong>@Model.sucesso</strong>
					<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
				</div>
			</div>
		</div>
	}


	<div class="row mb-3">
		<div class="offset-sm-3 col-sm-3 d-grid">
			<button type="submit" class="btn btn-primary">Submeter</button>
		</div>
		<div class="col-sm-3 d-grid">
			<a class="btn btn-outline-primary" href="/" role="button">Cancelar</a>
		</div>
	</div>

</form>