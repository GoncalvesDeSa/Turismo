@page
@model Turismo.Pages.Comodidades.IndexModel
@{
}


<br>
<h2>Comodidades</h2>
<a class='btn btn-primary btn-sm' href='/Comodidades/Create'>Nova Comodidade</a>
<table class="table">
	<thead>
	<tr>
		<th>ID</th>
		<th>Nome</th>
	</tr>
	</thead>
	<tbody>
		@foreach (var item in Model.ListaComodidade)
		{
		<tr>
			<td>@item.Id</td>
			<td>@item.Nome</td>
		<td>
			<a class='btn btn-primary btn-sm' href='/Comodidades/Edit?id=@item.Id'>Edit</a>
			<a class='btn btn-danger btn-sm' href='/Comodidades/Delete?id=@item.Id'>Delete</a>
		</td>
		</tr>
		}
	</tbody>
</table>